<div class="container">
  <div class="row">
    <form action="#">
      <fieldset>
        <legend>New Guests</legend>
        <div class="col-sm-4">
            {{input type=text value=newGuest class="form-control"}}
        </div>
          <button class="btn btn-primary" {{action addGuest}}>Add</button>
      </fieldset>
    </form>

  </div>
  <div class="row">
    <div class="col-md-4">
      <h3>Guests</h3>
      <hr>
      <ul class="guests">
      {{#each controller}}
          {{guest-card name=name guestid=id}}
      {{else}}
        <li><h4>There are no guests yet.</h4></li>
      {{/each}}
      </ul>
    </div>
  </div>
</div>